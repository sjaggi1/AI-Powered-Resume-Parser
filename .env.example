# AI-Powered Resume Parser - Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================
# API Configuration
# ============================================
API_TITLE=AI-Powered Resume Parser
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
DEBUG=True

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://resume_user:your_password_here@localhost:5432/resume_parser

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,jpg,png,jpeg

# ============================================
# Processing Configuration
# ============================================
ENABLE_OCR=True
ENABLE_AI_ENHANCEMENT=True
DEFAULT_LANGUAGE=en

# ============================================
# Security Configuration
# ============================================
# Generate a secure secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-use-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=50

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Cache Configuration
# ============================================
ENABLE_CACHE=True
CACHE_TTL=3600  # 1 hour in seconds

# ============================================
# Tesseract OCR Configuration
# ============================================
# Path to tesseract executable
# Linux/macOS: /usr/bin/tesseract or /usr/local/bin/tesseract
# Windows: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_CMD=/usr/bin/tesseract

# ============================================
# Matching Configuration
# ============================================
MATCHING_THRESHOLD=0.6
MIN_MATCH_SCORE=50
MAX_MATCH_SCORE=100

# ============================================
# Optional: External Services
# ============================================
# Redis (for caching and job queue)
# REDIS_URL=redis://localhost:6379/0

# Celery (for background job processing)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Sentry (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# ============================================
# Production Settings (Uncomment for Production)
# ============================================
# ENVIRONMENT=production
# DEBUG=False
# API_HOST=0.0.0.0
# API_PORT=80
# DATABASE_URL=postgresql://user:password@db:5432/resume_parser
# LOG_LEVEL=WARNING