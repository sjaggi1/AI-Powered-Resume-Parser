# ============================================================
# AI-Powered Resume Parser - Example Environment Configuration
# Copy this file to `.env` and fill in your actual credentials
# ============================================================

# ============================================
# API Configuration
# ============================================
API_TITLE=AI-Powered Resume Parser
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
DEBUG=True

# ============================================
# Database Configuration
# ============================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://resume_user:********@localhost:5432/resume_parser

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-***************
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdf,docx,doc,txt,jpg,png,jpeg

# ============================================
# Processing Configuration
# ============================================
ENABLE_OCR=True
ENABLE_AI_ENHANCEMENT=True
DEFAULT_LANGUAGE=en

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=change_me_in_production_********
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=50

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============================================
# Cache Configuration
# ============================================
ENABLE_CACHE=True
CACHE_TTL=3600

# ============================================
# Tesseract OCR Configuration
# ============================================
TESSERACT_CMD=/usr/bin/tesseract

# ============================================
# Matching Configuration
# ============================================
MATCHING_THRESHOLD=0.6
MIN_MATCH_SCORE=50
MAX_MATCH_SCORE=100

# ============================================
# Optional: External Services
# ============================================
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2
# SENTRY_DSN=https://********@sentry.io/projectid

# ============================================
# Production Settings (Uncomment for Production)
# ============================================
# ENVIRONMENT=production
# DEBUG=False
# API_PORT=80
# LOG_LEVEL=WARNING
